{
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "security.workspace.trust.untrustedFiles": "open",

  // git
  "git.openRepositoryInParentFolders": "always",

  // editor font
  // "editor.fontFamily": "HackGen ,Consolas, 'Courier New'",
  "editor.fontFamily": "'UDEV Gothic' ,Consolas, 'Courier New'",
  "editor.fontSize": 15,
  "editor.lineHeight": 16,

  // terminal font
  // "terminal.integrated.fontFamily": "MesloLGS NF",
  // "terminal.integrated.fontFamily": "HackGen35 Console NF",
  "terminal.integrated.fontFamily": "'UDEV Gothic 35NFLG'",
  "terminal.integrated.fontSize": 13,

  // editor
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "boundary",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.showSlider": "always",
  "editor.linkedEditing": true,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "same",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // Formatting Toggle
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "formattingToggle.affects": [
    "editor.formatOnPaste",
    "editor.formatOnSave",
    "editor.formatOnType"
  ],

  // terminal
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // window
  "window.commandCenter": true,

  // explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // XAML用エクスプローラー折り畳み
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.xaml": "$(capture).xaml.cs"
  },

  // files
  "files.associations": {
    "*.vssettings": "xml"
  },

  // workbench
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.layoutControl.enabled": true,
  "workbench.layoutControl.type": "both",

  "workbench.colorCustomizations": {
    // MinimapSlider
    // "minimapSlider.background": "#ffffff17",
    // "minimapSlider.hoverBackground": "#ffffff1b",
    // "minimapSlider.activeBackground": "#ffffff20",
    // for bracket colorization
    "editorBracketHighlight.foreground1": "#FF7FFF",
    "editorBracketHighlight.foreground2": "#3F7FFF",
    "editorBracketHighlight.foreground3": "#3FFF3F",
    "editorBracketHighlight.foreground4": "#FFFF00",
    "editorBracketHighlight.foreground5": "#FFBF3F",
    "editorBracketHighlight.foreground6": "#FF0000"
  },

  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
    // "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    // "editor.defaultFormatter": "vscode.css-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    // "editor.defaultFormatter": "vscode.json-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    // "editor.defaultFormatter": "vscode.json-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    // "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true
  },

  // past image
  "pasteImage.path": "${currentFileDir}/images",

  // git-graph
  "git-graph.repository.fetchAndPrune": true,
  "git-graph.repository.fetchAndPruneTags": true,

  // vim
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.hlsearch": true,

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,

  // draw-io
  "hediet.vscode-drawio.theme": "atlas",

  // one dark pro
  // "workbench.colorTheme": "One Dark Pro Darker",
  // "oneDarkPro.bold": true,
  // "oneDarkPro.editorTheme": "One Dark Pro Darker",

  // For Path Intellisense
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,

  // Code Runner
  "code-runner.executorMap": {
    "typescript": "npx ts-node"
  },

  // prettier
  "prettier.singleQuote": true,
  // "prettier.jsxSingleQuote": true,

  // tabnine
  "tabnine.experimentalAutoImports": true
}
